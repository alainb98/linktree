---
import { Image } from "astro:assets";
import photo from "../assets/profil.jpg";

export interface Link {
    icon: string;
    title: string;
    href: string;
}

interface Props {
    name: string;
    description: string;
    links: Link[];
}

const { links, name, description } = Astro.props;
---

<section class="w-full px-4 md:px-0">
    <div class="mx-auto flex w-full flex-col gap-6">
        <div class="flex flex-col gap-2 text-center">
            <div class="mb-2 flex items-center justify-center">
                <Image
                    src={photo}
                    alt="Profile Avatar"
                    class="h-24 w-24 rounded-full border-2 border-gray-300 object-cover md:h-32 md:w-32"
                />
            </div>
            <h1
                class="bg-gradient-to-r from-blue-600 via-indigo-300 to-cyan-400 inline-block text-transparent bg-clip-text select-none text-3xl font-extrabold">
                {name}
            </h1>
            <p class="select-none font-medium text-hn-text-primary">{description}</p>
        </div>
        <ul class="list-none space-y-3">
            {
                links.map((link) => (
                    <li class="custom-transition flex w-full items-center gap-4 rounded-full border border-zinc-400 px-4 py-3 hover:scale-105">
                        <a href={link.href} class="block w-full text-center text-hn-text-primary">
                            {link.title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>

<style>
    .custom-transition {
        transition: transform 0.15s cubic-bezier(0, 0.2, 0.5, 3) 0s;
    }
</style>
